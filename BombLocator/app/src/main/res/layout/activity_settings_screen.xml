<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.sfu.epsilon.bomblocator.SettingsScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="@string/game_options"
        android:id="@+id/OptionDescrip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/green"
        android:elevation="5dp"
        tools:elevation="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BSizeSpinner"
        android:layout_below="@+id/BoardSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/OptionDescrip"
        android:layout_toLeftOf="@+id/OptionDescrip"
        android:elevation="5dp"
        tools:elevation="5dp" />

    <TextView
        android:text="@string/board_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BoardSize"
        android:textSize="30sp"
        android:layout_below="@+id/OptionDescrip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp"
        tools:elevation="5dp"
        android:textColor="@color/green" />

    <TextView
        android:text="@string/amount_of_bombs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BombAmount"
        android:textSize="30sp"
        android:layout_below="@+id/BSizeSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:elevation="5dp"
        tools:elevation="5dp"
        android:textColor="@color/green" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BombNumSpinner"
        android:layout_below="@+id/BombAmount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/BSizeSpinner"
        android:layout_alignEnd="@+id/BSizeSpinner"
        android:elevation="5dp"
        tools:elevation="5dp" />

    <Button
        android:text="@string/reset_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetbutton"
        android:layout_above="@+id/BombAmount"
        android:layout_toRightOf="@+id/OptionDescrip"
        android:layout_toEndOf="@+id/OptionDescrip" />

    <Button
        android:text="@string/back_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backbutton"
        android:layout_alignTop="@+id/BombAmount"
        android:layout_alignRight="@+id/resetbutton"
        android:layout_alignEnd="@+id/resetbutton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/image34"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/settingsbImage"
        android:alpha="0.5"
        android:elevation="0dp"
        tools:elevation="0dp" />
</RelativeLayout>
